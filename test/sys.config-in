[{ocs,
      [{acct_log_rotate, 1440},
      {auth_log_dir, "log_auth"},
      {acct_log_dir, "log_acct"},
		{acct_log_size, 102400},
		{acct_log_files, 20},
      {abmf_log_dir, "log_abmf"},
      {ipdr_log_dir, "log_ipdr"},
      {tls_key, "%CERT_DIR%/key.pem"},
      {tls_cert, "%CERT_DIR%/cert.pem"},
      {tls_cacert, "%CERT_DIR%/CAcert.pem"}]},
{radius,
      [{sock_opts, [{recbuf, 16384}]}]},
{inets,
      [{services,
         [{httpd,
            [{server_name, "rest"},
               {bind_address, "localhost"},
               {directory_index, ["index.html"]},
               {directory, {"/",
                     [{auth_type, mnesia},
                     {auth_name, "ocs.sigscale.org"},
                     {require_group, ["all"]}]}},
               {modules, [mod_alias, mod_auth, mod_responsecontrol,
                     mod_ocs_rest_lang, mod_ocs_rest_accepted_content,
                     mod_ocs_rest_get, mod_get, mod_ocs_rest_post,
                     mod_ocs_rest_patch, mod_ocs_rest_delete, mod_disk_log]},
               {port, %HTTP_PORT%},
               {socket_type, {essl,
                     [{certfile, "%CERT_DIR%/cert.pem"},
                     {keyfile, "%CERT_DIR%/key.pem"}]}},
               {server_root, "%SERVER_ROOT%"},
               {document_root, "%APP_PRIV%/www"}]}]}]}].
